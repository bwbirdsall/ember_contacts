<h1>Binders Full of People!</h1>

<div class="col-md-7">
  <ul>
    {{#each contact in controller itemController = 'contact'}}
      <li>
        {{#link-to 'contact' contact}}
          {{contact.name}}
        {{/link-to}}
        <br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button {{action deleteContact}} class='btn btn-danger btn-xs'>Delete {{contact.name}}</button>
      </li>
    {{/each}}
  </ul>

  {{#link-to 'new_contact'}}New contact{{/link-to}}
</div>

<div class="col-md-5">
  {{outlet}}
</div>
